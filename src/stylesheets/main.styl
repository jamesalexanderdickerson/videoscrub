body
   background-color black
   color white
   font-family 'Raleway'

#preloader
  width 100%
  margin 0 auto
  background-color backgroundcolor
  display flex
  justify-content center
  align-items center
  opacity 1
  transition opacity 2s
  z-index 9999

#preloader.hidden
  opacity 0
  pointer-events none

#preloader img
  height 64px
  width 64px

#set-height
  display block
  height 93600px

#v0
  position fixed
  top 0
  left 0
  width 100%
ul
  margin 0
  padding 0
  width 100%
  display flex
  align-content stretch
  justify-content space-around
  flex-direction row
  align-items center
  list-style none

ul li a
  text-decoration none
  color white

#scrolldown
  height 100px
  padding 10px
  position fixed
  z-index 9997
  bottom 0
  left 0
  right 0
  display flex
  flex-direction column
  align-items center
  opacity 1
  transition opacity 1.5s

#scrolldown img
  padding 0
  margin 0
  animation bounce 5s infinite

@keyframes bounce
  0%
    transform translateY(0)
  50%
    transform translateY(20px)
  100%
    transform translateY(0)

#scrollend
  height 50px
  padding 10px
  position fixed
  z-index 9998
  bottom 0
  left 0
  right 0
  display flex
  opacity 0
  justify-content center
  transition opacity 1.5s

.hide
  opacity 0 !important

.show
  opacity 1 !important
